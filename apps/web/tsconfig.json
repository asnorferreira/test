{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@maemais/shared-types": [
        "../../packages/shared-types/src/index.ts"
      ],
      "@maemais/shared-types/*": [
        "../../packages/shared-types/src/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/shared-types/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}