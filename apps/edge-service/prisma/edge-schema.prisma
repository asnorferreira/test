generator client {
  provider = "prisma-client-js"
  output   = "../apps/edge-service/node_modules/.prisma/client-edge"
}

datasource db {
  provider = "sqlite"
  url      = env("EDGE_DATABASE_URL")
}

model EventoOffline {
  id        String   @id @default(cuid())
  payload   String  
  timestamp DateTime @default(now())
  tentativas Int     @default(0)
  enviado   Boolean  @default(false)

  @@index([enviado, timestamp])
}

model CredencialCache {
  id             String   @id 
  pessoaId       String
  pessoaNome     String
  tipo           String  
  valor          String   @unique
  status         String   
  vigenciaFim    DateTime?
  
  pontoAcessoIds String? 
  horarios       String? 
  
  lastUpdate     DateTime @default(now())

  @@index([valor, status])
  @@index([lastUpdate])
}