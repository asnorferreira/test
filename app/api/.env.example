NODE_ENV=development
API_PORT=3333
API_GLOBAL_PREFIX=api/v1

# 2. Database (Supabase / Local Docker)
# Use a URL do seu projeto Supabase ou a string do docker-compose
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/jsp_db?schema=public"

# 3. Auth
JWT_SECRET="SEU_SEGREDO_JWT_SUPER_FORTE_AQUI"
JWT_EXPIRATION="1d"
JWT_REFRESH_SECRET="SEU_SEGREDO_REFRESH_SUPER_FORTE_AQUI"
JWT_REFRESH_EXPIRATION="7d"

# 4. Supabase Storage (para CVs)
SUPABASE_URL="https://[SEU_ID_PROJETO].supabase.co"
SUPABASE_SERVICE_KEY="SUA_CHAVE_SERVICE_ROLE_AQUI"
SUPABASE_CV_BUCKET="curriculos"

# 5. Mailgun (para SMTP)
MAILGUN_API_KEY="SUA_CHAVE_API_MAILGUN_AQUI"
MAILGUN_DOMAIN="seu.dominio.mailgun.org"
MAILGUN_FROM_EMAIL="JSP Carreiras <nao-responda@seu.dominio.mailgun.org>"